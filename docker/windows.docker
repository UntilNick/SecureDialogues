# В качестве базового образа используем ubuntu:latest
FROM ubuntu:bionic

RUN  apt-get update \
  && apt-get install -y git make

RUN apt-get install -y \
    autoconf \
    automake \
    autopoint \
    bash \
    bison \
    bzip2 \
    flex \
    g++ \
    g++-multilib \
    gettext \
    git \
    gperf \
    intltool \
    libc6-dev-i386 \
    libgdk-pixbuf2.0-dev \
    libltdl-dev \
    libssl-dev \
    libtool-bin \
    libxml-parser-perl \
    lzip \
    make \
    openssl \
    p7zip-full \
    patch \
    perl \
    pkg-config \
    python \
    ruby \
    sed \
    unzip \
    wget 

RUN mkdir /cross && cd /cross && git clone https://github.com/mxe/mxe.git && cd mxe && git checkout build-2019-03-04

WORKDIR /cross/mxe

ADD curl.mk /cross/mxe/src


RUN make MXE_TARGETS=i686-w64-mingw32.shared MXE_PLUGIN_DIRS=plugins/gcc7 qtbase -j4 JOBS=4
RUN make MXE_TARGETS=i686-w64-mingw32.static MXE_PLUGIN_DIRS=plugins/gcc7 curl openssl boost BUILD_STATIC=ON  -j4 JOBS=4
RUN make MXE_TARGETS=i686-w64-mingw32.shared MXE_PLUGIN_DIRS=plugins/gcc7 gcc harfbuzz pthreads zlib libpng pcre2 -j4 JOBS=4

ENV PATH="/cross/mxe/usr/bin:${PATH}"

WORKDIR /app/build

ENTRYPOINT i686-w64-mingw32.shared-cmake \
     -DBUILD_TESTING=OFF \
     -DJSON_BuildTests=OFF \
     -DJSON_Install=OFF \
     -DXG_TESTS=OFF \
     -DCURL_LIBRARY=/cross/mxe/usr/i686-w64-mingw32.static/lib \
     -DCURL_INCLUDE_DIR=/cross/mxe/usr/i686-w64-mingw32.static/include \
     /app/src \
        && make -j4 JOBS=4 \
        && cp bin/SecureDialogues.exe /app/res/SecureDialogues-windows-i686.exe
